{
  "name": "coastal-crowd",
  "description": "An app for composable components and/or solutions",
  "version": "1.0.1",
  "author": "Jamie Smith (me@jsmith.dev)",
  "repository": {
    "type": "git"
  },
  "license": "UNLICENSED",
  "keywords": [
    "lwc"
  ],
  "lint-staged": {
    "**/*.{css,html,js,json,md,ts,yaml,yml}": [
      "prettier --write"
    ],
    "./src/**/*.js": [
      "eslint"
    ]
  },
  "devDependencies": {
    "@lwc/eslint-plugin-lwc": "^1.5.0",
    "@lwc/module-resolver": "^2.12.0",
    "@salesforce/eslint-config-lwc": "^3.3.0",
    "@salesforce/eslint-plugin-lightning": "^1.0.0",
    "copy-webpack-plugin": "^10.2.4",
    "eslint": "^7.27.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-inclusive-language": "^2.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^4.3.8",
    "idb": "^7.1.1",
    "jest": "^29.3.1",
    "lint-staged": "^10.5.4",
    "lwc": "^2.12.0",
    "lwc-webpack-plugin": "^3.0.0",
    "prettier": "^2.3.0",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.8.0",
    "webpack-merge": "^5.8.0"
  },
  "scripts": {
    "start": "webpack serve --config webpack.dev.js",
    "build": "webpack --mode=production",
    "build:dev": "webpack",
    "watch": "webpack serve",
    "lint": "eslint ./src/**/*.js",
    "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
    "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\""
